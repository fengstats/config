  },

  // ================================================================
  // better comments
  // ================================================================
  "better-comments.multilineComments": true,
  "better-comments.highlightPlainText": true,
  "better-comments.tags": [
    {
      "tag": "HINT",
      "color": "#fff",
      "backgroundColor": "#0bba54"
    },
    {
      "tag": "NOTE",
      "color": "#fff",
      "backgroundColor": "#3498db"
    },
    {
      "tag": "TODO",
      "color": "#fff",
      "backgroundColor": "#ff7c00"
    },
    {
      "tag": "HACK",
      "color": "#fff",
      "backgroundColor": "#ff7c00"
    },
    {
      "tag": "FIXME",
      "color": "#fff",
      "backgroundColor": "#ff4757"
    },
    {
      "tag": "BUG",
      "color": "#fff",
      "backgroundColor": "#ff4757"
    }
  ],

  // ================================================================
  // comment anchors
  // ================================================================
  // 锚点加载解析时长，通过使用更大的值来获得更好的性能
  "commentAnchors.parseDelay": 300,
  // 工作区最大显示文件数量
  "commentAnchors.workspace.maxFiles": 50,
  // 排除在外
  "commentAnchors.workspace.excludeFiles": "**/{node_modules,.git,.idea,target,out,build,bin,obj,dist,vendor}/**/*",
  "commentAnchors.tags.separators": [" - ", ": ", " ", "："],
  "commentAnchors.tags.anchors": {
    // ANCHOR: 一个锚点
    "ANCHOR": {
      "iconColor": "default",
      "highlightColor": "#A8C023",
      "scope": "file"
    },
    "TODO": {
      "iconColor": "blue",
      "highlightColor": "#3ea8ff",
      "scope": "workspace"
    },
    "BUG": {
      "iconColor": "red",
      "highlightColor": "#F44336",
      "scope": "workspace"
    },
    "FIXME": {
      "iconColor": "red",
      "highlightColor": "#F44336",
      "scope": "workspace"
    },
    // NOTE: 特别说明
    "NOTE": {
      "iconColor": "orange",
      "highlightColor": "#64DD17",
      "scope": "workspace"
    },
    // REVIEW: 需要额外审查的部分
    "REVIEW": {
      "iconColor": "green",
      "highlightColor": "#FFB300",
      "scope": "workspace"
    },
    // disabled
    "STUB": {
      "scope": "file",
      "enabled": false
    },
    "SECTION": {
      "scope": "file",
      "enabled": false
    },
    "LINK": {
      "scope": "file",
      "enabled": false
    }
  },

  // ================================================================
  // ErrorLens
  // ================================================================
  "errorLens.fontFamily": "JetBrains Mono",
  // 是否使用斜体
  // "errorLens.fontStyleItalic": true,
  "errorLens.fontWeight": "500",
  "errorLens.margin": "20px",
  "errorLens.messageTemplate": "$severity：$message ($source) $count",
  "errorLens.removeLinebreaks": false,
  "errorLens.gutterIconsFollowCursorOverride": false,
  // 启用的错误提示等级
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],

  // ================================================================
  // Prettier
  // ================================================================
  "prettier.printWidth": 100,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",

  // ================================================================
  // Formatter | 指定文件类型指定格式化方式
