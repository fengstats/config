// 将键绑定放在此文件中以覆盖默认值auto[]
[
  // ================================================================
  // Basic
  // ================================================================
  // 选择最近的文件工作区（只能在聚焦文件管理、编辑器、Panel 时使用）
  {
    "key": "cmd+r",
    "command": "workbench.action.openRecent",
    "when": "filesExplorerFocus || editorFocus || panelFocus"
  },
  // 搜索面板刷新搜索结果，需要聚焦侧边栏以及搜索面板可见
  {
    "key": "cmd+r",
    "command": "search.action.refreshSearchResults",
    "when": "sideBarFocus && searchViewletVisible"
  },
  // 搜索面板调出替换输入框的快捷键
  {
    "key": "cmd+g",
    "command": "workbench.action.replaceInFiles",
    "when": "sideBarFocus"
  },
  // 替换单个文件内的某处匹配（在搜索面板中使用，需聚焦具体匹配项）
  {
    "key": "enter",
    "command": "search.action.replace",
    "when": "matchFocus && replaceActive && searchViewletVisible"
  },
  // 切换随机背景图
  {
    "key": "shift+cmd+7",
    "command": "extension.backgroundCover.refresh"
  },
  // Run Code
  {
    "key": "cmd+alt+n",
    "command": "code-runner.run"
  },
  // 切换左右 panel
  {
    "key": "cmd+[",
    "command": "workbench.action.previousPanelView",
    "when": "panelFocus"
  },
  {
    "key": "cmd+]",
    "command": "workbench.action.nextPanelView",
    "when": "panelFocus"
  },
  // 打开一个新窗口
  {
    "key": "cmd+ctrl+n",
    "command": "workbench.action.newWindow"
  },
  // 打开当前文件所在访达位置
  {
    "key": "cmd+shift+r",
    "command": "revealFileInOS"
    // "when": "!editorFocus"
  },
  // 在不同的面板（组件）之间进行聚焦
  {
    "key": "cmd+shift+h",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "cmd+shift+l",
    "command": "workbench.action.navigateRight"
  },
  {
    "key": "cmd+shift+k",
    "command": "workbench.action.navigateUp"
  },
  {
    "key": "cmd+shift+j",
    "command": "workbench.action.navigateDown"
  },
  // 聚焦文件管理面板
  {
    "key": "cmd+shift+;",
    "command": "workbench.view.explorer",
    "when": "viewContainer.workbench.view.explorer.enabled"
  },
  // 聚焦全局搜索面板
  {
    "key": "cmd+shift+f",
    "command": "workbench.action.findInFiles"
  },
  // 聚焦 gitlens
  {
    "key": "cmd+shift+g",
    "command": "workbench.view.scm",
    "when": "workbench.scm.active"
  },
  // {
  //   "key": "cmd+r",
  //   "command": "workbench.action.openRecent"
  // },
  // project-manager: 我发现了 ctrl+r 来操作项目管理的方式更爽
  // {
  //   "key": "ctrl+'",
  //   "command": "workbench.view.extension.project-manager"
  // },
  // {
  //   "key": "cmd+[",
  //   "command": "workbench.action.navigateBack"
  // },
  // {
  //   "key": "cmd+]",
  //   "command": "workbench.action.navigateForward"
  // },
  // 切换侧边栏是否可见
  // {
  //   "key": "cmd+n",
  //   "command": "workbench.action.toggleSidebarVisibility"
  // },
  // vim 的方式
  // {
  //   "key": "cmd+shift+h",
  //   "command": "vim.remap",
  //   "when": "vim.mode == 'Normal'",
  //   "args": {
  //     "after": ["<c-w>", "h"]
  //   }
  // },
  // 只能在编辑区聚焦
  // {
  //   "key": "cmd+shift+h",
  //   "command": "workbench.action.focusLeftGroupWithoutWrap"
  // },
  // {
  //   "key": "cmd+shift+l",
  //   "command": "workbench.action.focusRightGroupWithoutWrap"
