{
  // ================================================================
  // Basic
  // ================================================================
  "files.eol": "\n",
  "files.autoSave": "off",
  "files.autoSaveDelay": 200,
  "files.associations": {
    ".zimrc": "shellscript",
    "*.json": "jsonc"
  },
  "explorer.confirmDragAndDrop": false,
  "security.workspace.trust.untrustedFiles": "open",
  "diffEditor.ignoreTrimWhitespace": false,
  "search.smartCase": true,
  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },

  // ================================================================
  // Window and Workbench
  // ================================================================
  "window.nativeTabs": false,
  "window.zoomLevel": 0.4,
  "window.titleBarStyle": "custom",
  "window.commandCenter": false,
  "window.dialogStyle": "custom",
  "workbench.statusBar.visible": true,
  "window.newWindowDimensions": "offset",
  "workbench.iconTheme": "file-icons",
  "workbench.colorTheme": "Panda Syntax",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.preferredLightColorTheme": "Default Light+",
  "workbench.preferredDarkColorTheme": "Panda Syntax",
  "sundial.sunrise": "07:00",
  "sundial.sunset": "18:30",
  "sundial.interval": 30,
  "sundial.daySettings": {},
  "sundial.nightSettings": {},
  "window.autoDetectColorScheme": false,
  "workbench.editor.showTabs": true,
  "workbench.editor.showIcons": true,
  "workbench.list.smoothScrolling": true,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.tabCloseButton": "off",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.wrapTabs": false,
  "workbench.editor.limit.value": 5,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.tree.expandMode": "singleClick",
  "workbench.tree.indent": 10,
  "workbench.startupEditor": "newUntitledFile",

  // ================================================================
  // Editor
  // ================================================================
  "editor.tabSize": 2,
  "editor.fontSize": 13,
  "editor.lineHeight": 1.5,
  "editor.lineNumbers": "on",
  "editor.fontFamily": "JetBrains Mono, monospace",
  // "editor.fontFamily": "Monaco, monospace",
  // "editor.fontFamily": "Comic Shanns,  monospace",
  // "editor.fontFamily": "IBM Plex Mono, monospace",
  // "editor.fontFamily": "Input Mono, monospace",
  // "editor.fontFamily": "Fira Code, monospace",
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss06', 'zero'",
  "editor.minimap.size": "fit",
  // "editor.linkedEditing": true,
  "editor.suggest.insertMode": "replace",
  "editor.quickSuggestions": {
    "comments": "off",
    "strings": "on"
  },
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggest.localityBonus": true,
  "editor.suggestSelection": "first",
  "editor.suggest.preview": true,
  "editor.suggest.shareSuggestSelections": true,
  "editor.suggest.showStatusBar": true,
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.useInlineCompletions": true,
  "editor.detectIndentation": false,
  "editor.accessibilitySupport": "off",
  "editor.acceptSuggestionOnEnter": "on",
  "editor.renderLineHighlight": "line",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorBlinking": "blink",
  "editor.find.addExtraSpaceOnTop": false,
  "editor.glyphMargin": true,
  "editor.multiCursorModifier": "alt",
  "editor.renderWhitespace": "selection",
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.guides.bracketPairs": "active",
  "editor.smoothScrolling": true,
  "editor.scrollBeyondLastLine": true,
  "editor.stickyScroll.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.fixAll.eslint": true
  },
  // NOTE: 从当前主题重写编辑器某些关键字样式
  "editor.semanticTokenColorCustomizations": {
    "enabled": true
  },
  "editor.tokenColorCustomizations": {
    "[Vitesse Dark]": {
      "comments": "#909090"
    },
    "[Ayu Mojave]": {
      "comments": "#a2aaa2"
    },
    "[One Dark Pro Darker]": {
      "comments": "#a2aaa2"
    },
    "[Moegi Dark Vitesse]": {
      "comments": "#a1a7a1"
    },
    "[GitHub Dark Dimmed]": {
      "comments": "#adb5ad"
    },
    "[Panda Syntax]": {
      "comments": "#adb5ad",
      "textMateRules": [
        // NOTE: Vue 项目中子组件和组件库标签的颜色关键字
        {
          "scope": ["support.class.component"],
          "settings": {
            "foreground": "#54e4f4",
            "fontStyle": ""
          }
        },
        {
          "scope": [
            "entity.name.tag",
            "entity.name.tag.html"
            // "entity.name.tag.css",
            // "meta.tag.structure.any.html",
            // "meta.tag.other.html",
            // "meta.tag.metadata.script.html",
            // "entity.name.tag.jade"
            // "source.vue",
            // "entity.name.tag.pug"
            // "meta.tag.other"
          ],
          "settings": {
            "foreground": "#ed9cc2"
          }
        }
      ]
    },
    "[Moegi Dark]": {
      "comments": "#909090",
      "textMateRules": []
    },
    "textMateRules": [
      {
        "name": "Comment Italics",
        "scope": ["comment", "punctuation.definition.comment"],
        "settings": {
          "fontStyle": ""
        }
      }
      // {
      //   "name": "Keyword Bold",
      //   "scope": ["keyword", "storage.type", "storage.modifier"],
      //   "settings": {
      //     "fontStyle": "bold"
      //   }
      // }
    ]
  },
  "workbench.colorCustomizations": {
    "[Panda Syntax]": {
      // "commandCenter.border": "#86f6de8f",
      "badge.background": "#aaaaaa",
      "badge.foreground": "#000000",
      "quickInput.background": "#202020bf",
      "widget.shadow": "#0000008f",
      "titleBar.border": "#aaaaaa4f",
      "tab.border": "#aaaaaa4f",
      "contrastBorder": "#0000008f",
      // "tab.activeBorderTop": "#86f6de",
      // "tab.activeBorder": "#292a2b",
      "tab.activeBorder": "#86f6deaf",
      "editorGroupHeader.tabsBorder": "#aaaaaa4f",
      "textCodeBlock.background": "#aaaaaa4f",
      "editorWidget.foreground": "#cccccc",
      "editorCursor.background": "#ffffff",
      "editor.selectionBackground": "#aaaaaa4f",
      "editor.lineHighlightBackground": "#aaaaaa2f",
      "editor.selectionHighlightBackground": "#aaaaaa2f",
      "editor.wordHighlightBackground": "#aaaaaa2f",
      "editorSuggestWidget.selectedForeground": "#ffffffff",
      "editorSuggestWidget.selectedBackground": "#aaaaaa2f",
      "editorHoverWidget.background": "#202020ef",
      "editorWidget.background": "#202020ef",
      "scrollbarSlider.activeBackground": "#aaaaaa2f",
      "scrollbarSlider.background": "#aaaaaa2f",
      "scrollbarSlider.hoverBackground": "#aaaaaa2f"
    },
    "[-Panda Syntax][-Vitesse Dark]": {
      "sash.hoverBorder": "#66c0ad",
      "input.background": "#1a1d22",
      "quickInput.background": "#12151aaf",
      "focusBorder": "#aaaaaa5f",
      "gitDecoration.ignoredResourceForeground": "#aaaaaa5f",
      "textCodeBlock.background": "#aaaaaa3f",
      "panel.background": "#13151b",
      "widget.shadow": "#00000033",
      "scrollbar.shadow": "#050505",
      "scrollbarSlider.activeBackground": "#aaaaaa2f",
      "scrollbarSlider.background": "#aaaaaa2f",
      "scrollbarSlider.hoverBackground": "#aaaaaa2f",
      "panel.border": "#abbcab50",
      "titleBar.activeForeground": "#cccccc",
      "titleBar.inactiveForeground": "#cccccc",
      "titleBar.activeBackground": "#12151a",
      "titleBar.inactiveBackground": "#12151a",
      "titleBar.border": "#aaaaaa5f",
      "activityBar.background": "#12151a",
      "activityBar.border": "#aaaaaa5f",
      "activityBar.foreground": "#dddddd",
      "activityBar.inactiveForeground": "#dddddd5f",
      "activityBar.activeBorder": "#66c0ad",
      "activityBarBadge.foreground": "#000000",
      "activityBarBadge.background": "#77dac5",
      "sideBar.background": "#12151a",
      "sideBar.border": "#aaaaaa5f",
      "sideBarSectionHeader.border": "#aaaaaa5f",
      "sideBarSectionHeader.background": "#12151a",
      "list.hoverBackground": "#6666661f",
      "list.focusBackground": "#6666661f",
      "list.activeSelectionBackground": "#aaaaaa1f",
      "list.inactiveSelectionBackground": "#aaaaaa1f",
      "list.inactiveFocusBackground": "#00000000",
      "tab.activeBackground": "#1a1d22",
      "tab.inactiveBackground": "#12151a",
      "tab.activeBorderTop": "#66c0ad",
      "tab.activeBorder": "#00000000",
      "tab.hoverBackground": "#1a1d22",
      "tab.border": "#aaaaaa5f",
      "editorGroupHeader.tabsBackground": "#12151a",
      "breadcrumb.background": "#1a1d22",
      "breadcrumb.activeSelectionForeground": "#66c0ad",
      "breadcrumbPicker.background": "#12151abf",
      "editor.background": "#1a1d22",
      "editorGroup.border": "#abbcab2f",
      "editorLineNumber.foreground": "#cccccc5f",
      "editorLineNumber.activeForeground": "#cccccc",
      "editor.selectionBackground": "#aaaaaa4f",
      "editor.selectionHighlightBackground": "#aaaaaa1f",
      "editor.wordHighlightBackground": "#aaaaaa1f",
      "editorCursor.background": "#000000",
      "editorWidget.background": "#12151aef",
      "editorHoverWidget.background": "#12151aef",
      "editorSuggestWidget.selectedForeground": "#ffffffff",
      "editorSuggestWidget.selectedBackground": "#aaaaaa3f",
      "editor.lineHighlightBackground": "#aaaaaa1f",
      "editorStickyScroll.background": "#1a1d22",
      "editorStickyScrollHover.background": "#aaaaaa1f",
      // TODO: 终端失去焦点后背景色之类如何设置
      "terminal.selectionBackground": "#d1d1d130",
      "badge.background": "#aaaaaa5f",
      "badge.foreground": "#cccccc"
    }
  },

  // ================================================================
  // Terminal
  // ================================================================
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "Monaco, Hack Nerd Font Mono, monospace",
  // "terminal.integrated.fontFamily": "Comic Shanns, Hack Nerd Font Mono, monospace",
  // "terminal.integrated.fontFamily": "Input Mono, Hack Nerd Font Mono, monospace",
  // "terminal.integrated.fontFamily": "JetBrains Mono, Hack Nerd Font Mono,monospace",
  "terminal.integrated.confirmOnKill": "never",
  "terminal.integrated.copyOnSelection": true,
  // "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.persistentSessionReviveProcess": "never",

  // ================================================================
  // vim
  // ================================================================
  "vim.leader": "<space>",
  "vim.leap.enable": true,
  "vim.leap.bidirectionalSearch": true,
  "vim.leap.showMarkerPosition": "target",
  "vim.leap.labels": "sklyuiopnm,qwertzxcvbahdgjf;",
  "vim.leap.caseSensitive": false,
  "vim.leap.marker.charColor": "#fff",
  "vim.leap.marker.backgroundColors": ["#f5222d", "#99ccff"],
  "vim.easymotion": false,
  "vim.useSystemClipboard": true,
  "vim.incsearch": true,
  "vim.useCtrlKeys": false,
  "vim.hlsearch": true,
  "vim.surround": true,
  "vim.sneak": true,
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false
  },
  "vim.insertModeKeyBindings": [],
  "vim.operatorPendingModeKeyBindings": [
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["g", "_"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["backspace"],
      "after": ["\"", "_", "d"]
    },
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["enter"],
      "after": ["a", "f"]
    },
    {
      "before": ["p"],
      "after": ["p", "g", "v", "y"]
    },
    {
      "before": ["K"],
      "after": ["5", "k"]
    },
    {
      "before": ["J"],
      "after": ["5", "j"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["g", "_"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["leader", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    // {
    //   "before": ["leader", "a"],
    //   "commands": ["explorer.newFile"]
    // },
    // {
    //   "before": ["leader", "A"],
    //   "commands": ["explorer.newFolder"]
    // },
    {
      "before": ["leader", "v", "v"],
      "commands": ["hocusPocus.createVariable"]
    },
    {
      "before": ["leader", "f", "f"],
      "commands": ["hocusPocus.createFunction"]
    },
    {
      "before": ["leader", "d", "f"],
      "commands": ["git.openChange"]
    },
    {
      "before": ["leader", "k"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["leader", "j"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["K"],
      "after": ["5", "g", "k"]
    },
    {
      "before": ["J"],
      "after": ["5", "g", "j"]
    },
    {
      "before": ["n"],
      "after": ["n", "z", "z"]
    },
    {
      "before": ["N"],
      "after": ["N", "z", "z"]
    },
    {
      "before": ["U"],
      "after": ["<c-r>"]
    },
    {
      "before": ["s", "l", ";"],
      "commands": [":vsplit"]
    },
    {
      "before": ["s", "j", ";"],
      "commands": [":split"]
    },
    {
      "before": ["g", "k"],
      "after": ["<c-o>"]
    },
    {
      "before": ["g", "j"],
      "after": ["<c-i>"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["g", "_"]
    },
    {
      "before": ["leader", "w"],
      "commands": ["workbench.action.files.saveWithoutFormatting"]
    },
    {
      "before": ["leader", ";"],
      "commands": [":noh"]
    },
    {
      "before": ["leader", "s"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["leader", "q"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    // {
    //   "before": ["Q"],
    //   "commands": ["workbench.action.closeActiveEditor"]
    // },
    // {
    //   "before": ["leader", "f"],
    //   "after": ["g", "f"]
    // }
    {
      "before": ["leader", "["],
      "after": ["[", "{"]
    },
    {
      "before": ["leader", "]"],
      "after": ["]", "}"]
    },
    {
      "before": ["leader", "t"],
      "commands": ["workbench.action.terminal.focus"]
    }
  ],

  // ================================================================
  // Comment Anchors
  // ================================================================
  "commentAnchors.tags.provideAutoCompletion": false,
  "commentAnchors.parseDelay": 300,
  "commentAnchors.workspace.maxFiles": 50,
  "commentAnchors.workspace.excludeFiles": "**/{node_modules,.git,.idea,target,out,build,bin,obj,dist,vendor}/**/*",
  "commentAnchors.tags.separators": [" - ", ": ", " ", "："],
  "commentAnchors.tags.anchors": {
    "ANCHOR": {
      "iconColor": "default",
      "highlightColor": "#A8C023",
      "scope": "file"
    },
    "TODO": {
      "iconColor": "blue",
      "highlightColor": "#3ea8ff",
      "scope": "workspace"
    },
    "BUG": {
      "iconColor": "red",
      "highlightColor": "#F44336",
      "scope": "workspace"
    },
    "FIXME": {
      "iconColor": "red",
      "highlightColor": "#F44336",
      "scope": "workspace"
    },
    "REVIEW": {
      "iconColor": "green",
      "highlightColor": "#FFB300",
      "scope": "workspace"
    },
    "NOTE": {
      "iconColor": "orange",
      "highlightColor": "#64DD17",
      "scope": "file"
    },
    "STUB": {
      "scope": "file",
      "enabled": false
    },
    "SECTION": {
      "scope": "file",
      "enabled": false
    },
    "LINK": {
      "scope": "file",
      "enabled": false
    }
  },

  // ================================================================
  // ErrorLens
  // ================================================================
  "errorLens.fontFamily": "JetBrains Mono",
  "errorLens.fontWeight": "normal",
  // "errorLens.margin": "20px",
  "errorLens.messageTemplate": "$severity：$message ($source) $count",
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],

  // ================================================================
  // Formatter
  // ================================================================
  "editor.formatOnSave": true,
  "prettier.printWidth": 100,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  // "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript][jsonc][vue][typescript][html][css][less]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[html]": {
    "editor.suggest.insertMode": "replace"
  },

  // ================================================================
  // paramHints
  // ================================================================
  "javascript.inlayHints.parameterNames.enabled": "none",
  "typescript.inlayHints.parameterNames.enabled": "none",
  "javascript.inlayHints.parameterTypes.enabled": false,
  "typescript.inlayHints.parameterTypes.enabled": false,
  "editor.inlayHints.enabled": "off",

  // ================================================================
  // other
  // ================================================================
  "less.compile": {
    "outExt": ".css"
  },
  "js/ts.implicitProjectConfig.checkJs": true,
  "cSpell.useGitignore": false,
  "cSpell.enableFiletypes": ["vimrc"],
  "cSpell.userWords": [
    "codeium",
    "colour",
    "easymotion",
    "hlsearch",
    "incsearch",
    "Moegi",
    "peachpuff",
    "tencent",
    "Vitesse",
    "zimfw",
    "zmodule"
  ],
  "indentRainbow.indicatorStyle": "light",
  "indentRainbow.lightIndicatorStyleLineWidth": 1,
  "indentRainbow.colors": [
    "rgba(255,255,64,0.3)",
    "rgba(127,255,127,0.3)",
    "rgba(255,127,255,0.3)",
    "rgba(79,236,236,0.3)"
  ],
  "codeium.enableSearch": false,
  "codeium.enableConfig": {
    "*": true,
    "plaintext": true
  },
  "commentTranslate.hover.enabled": true,
  "commentTranslate.hover.concise": false,
  "commentTranslate.hover.content": false,
  "commentTranslate.hover.variable": true,
  "commentTranslate.hover.string": true,
  "commentTranslate.targetLanguage": "zh-CN",
  "commentTranslate.multiLineMerge": true
}
