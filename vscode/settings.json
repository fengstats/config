{
  // Basic
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.openEditors.visible": 20,
  "files.eol": "\n",
  "files.autoSave": "off",
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": false,
  "files.associations": {
    ".zimrc": "shellscript",
    "*.json": "jsonc"
  },
  "search.smartCase": true,
  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },

  // Window
  "window.dialogStyle": "custom",
  "window.newWindowDimensions": "offset",
  "window.commandCenter": true,
  "window.zoomLevel": 0.6,
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "GitHub Dark Classic",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.list.smoothScrolling": true,
  "workbench.editor.focusRecentEditorAfterClose": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.limit.value": 12,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.enabled": true,
  "workbench.colorCustomizations": {
    "editor.lineHighlightBackground": "#ffffff00",
    "[Default Dark+]": {
      "terminal.ansiBlue": "#8adcf1",
      "terminal.ansiRed": "#ff6b81",
      "terminal.ansiBrightRed": "#ff7675",
      "statusBar.background": "#333"
    }
  },
  // "workbench.preferredLightColorTheme": "Panda Moe",
  // "workbench.preferredDarkColorTheme": "Panda Moe",

  // Editor
  "editor.tabSize": 2,
  "editor.fontSize": 13.5,
  "editor.lineNumbers": "interval",
  "editor.lineHeight": 1.5,
  "editor.linkedEditing": false,
  "editor.fontFamily": "Input Mono Freeze, monospace",
  "editor.minimap.enabled": false,
  "editor.cursorSurroundingLines": 5,
  "editor.suggest.snippetsPreventQuickSuggestions": true,
  "editor.accessibilitySupport": "off",
  "editor.renderLineHighlight": "all",
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.guides.bracketPairs": "active",
  "editor.smoothScrolling": true,
  "editor.stickyScroll.enabled": false,
  "editor.unicodeHighlight.allowedLocales": {
    "zh-hant": true
  },
  "editor.semanticTokenColorCustomizations": {
    "enabled": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.fixAll.eslint": true
  },
  "editor.tokenColorCustomizations": {
    "[GitHub Dark Classic][Atom One Dark]": {
      "comments": "#95a5a6"
    },
    "[Default Dark+]": {
      "comments": "#adb5ad"
    },
    "[Moegi Dark Vitesse]": {
      "comments": "#a1a7a1"
    },
    "textMateRules": [
      {
        "name": "Comment Italics",
        "scope": ["comment", "punctuation.definition.comment"],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  // "editor.fontFamily": "Input Mono, monospace",
  // "editor.fontFamily": "Monaco, monospace",
  // "editor.fontFamily": "JetBrains Mono, monospace",
  // "emmet.showSuggestionsAsSnippets": true,
  // "editor.quickSuggestions": {
  //   "strings": "on"
  // },

  // Terminal
  "terminal.external.osxExec": "iTerm",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.confirmOnKill": "never",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontFamily": "Input Mono Freeze, Hack Nerd Font Mono, monospace",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  // "terminal.integrated.fontFamily": "Monaco, Hack Nerd Font Mono, monospace",
  // "terminal.integrated.fontFamily": "JetBrains Mono, Hack Nerd Font Mono,monospace",

  // Formatter
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.printWidth": 120,
  "prettier.proseWrap": "preserve",
  "editor.formatOnSave": true,
  "formatFiles.excludedFolders": ["node_modules", ".vscode", ".git", "dist", ".chrome", "attachments"],
  "formatFiles.extensionsToInclude": ".md",
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript][jsonc][vue][typescript][html][css][less]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Extensions
  "extensions.ignoreRecommendations": true,
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1,
    "asvetliakov.vscode-neovim": 2
    // BUG: 将 Volar 单独配置线程后，hover 提示或者输入提示会出现重复的选项，起初以为是插件的问题，没想到是这个！
    // "Vue.volar": 3
    // "BrandonKirbyson.vscode-animations": 4,
  },
  "js/ts.implicitProjectConfig.checkJs": true,

  // Vim
  "vim.leader": "<space>",
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": false,
  "vim.hlsearch": true,
  "vim.foldfix": true,
  "vim.easymotion": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 80,
  "vim.highlightedyank.color": "#00000000",
  "vim.highlightedyank.textColor": "white",
  "vim.handleKeys": {
    "<C-f>": false,
    "<C-v>": true,
    "<C-a>": true,
    "<C-x>": true,
    // insert mode 下删除一个单词的快捷方式
    "<C-w>": true
  },
  "vim.operatorPendingModeKeyBindings": [
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["g", "_"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["\""],
      "after": ["S", "\""]
    },
    {
      "before": ["'"],
      "after": ["S", "'"]
    },
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["p"],
      "after": ["p", "g", "v", "y"]
    },
    {
      "before": ["K"],
      "after": ["4", "k"]
    },
    {
      "before": ["J"],
      "after": ["4", "j"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["g", "_"]
    },
    {
      "before": ["leader", "d", "f"],
      "after": ["V", "$", "%", "d"]
    },
    {
      "before": ["leader", "i", "w"],
      "after": ["V", "$", "%", "o"]
    }
    // {
    //   "before": ["backspace"],
    //   "after": ["\"", "_", "c"]
    // },
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["g", "d"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": [",", ","],
      "after": ["A", ",", "esc"]
    },
    {
      "before": ["'", "'"],
      "after": ["v", "i", "w", "S", "'", "e", "l"]
    },
    {
      "before": ["\"", "\""],
      "after": ["v", "i", "w", "S", "\"", "e", "l"]
    },
    {
      "before": ["s"],
      "after": ["<space>", "<space>", "2", "s"]
    },
    {
      "before": ["J"],
      "after": ["5", "g", "j"]
    },
    {
      "before": ["K"],
      "after": ["5", "g", "k"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["g", "_"]
    },
    {
      "before": ["U"],
      "after": ["<c-r>"]
    },
    {
      "before": ["n"],
      "after": ["n", "z", "z"]
    },
    {
      "before": ["N"],
      "after": ["N", "z", "z"]
    },
    {
      "before": ["z", "C"],
      "commands": ["editor.foldAll"]
    },
    {
      "before": ["z", "O"],
      "commands": ["editor.unfoldAll"]
    },
    {
      "before": ["leader", "d", "f"],
      "after": ["V", "$", "%", "d"]
    },
    {
      "before": ["leader", "i", "w"],
      "after": ["V", "$", "%", "o"]
    },
    {
      "before": ["leader", "["],
      "after": ["[", "{"]
    },
    {
      "before": ["leader", "]"],
      "after": ["]", "}"]
    },
    {
      "before": ["leader", "o"],
      "commands": ["extension.toggleBool"]
    },
    {
      "before": ["leader", "l"],
      "commands": ["workbench.action.toggleAuxiliaryBar"]
    },
    {
      "before": ["leader", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["leader", "s"],
      "commands": ["workbench.action.files.save"]
    },
    {
      "before": ["leader", "q"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["leader", "w"],
      "commands": ["workbench.action.files.saveWithoutFormatting"]
    },
    {
      "before": ["leader", ";"],
      "commands": [":noh"]
    }
    // {
    //   "before": ["s"],
    //   "commands": ["leap.find"]
    // },
    // {
    //   "before": ["enter"],
    //   "commands": ["expand_region"]
    // },
  ],

  // NeoVim
  "vscode-neovim.revealCursorScrollLine": true,
  "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/opt/neovim/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.darwin": "/Users/feng/.config/zsh/init.vim",

  // Git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "never",

  // Codeium
  "codeium.enableSearch": false,
  "codeium.enableCodeLens": false,
  "codeium.enableConfig": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "jsonc": false
  },

  // Markdown
  "markdown-preview-github-styles.colorTheme": "light",
  "markdown-preview-github-styles.lightTheme": "light_tritanopia",
  "markdown-preview-github-styles.darkTheme": "dark_dimmed",

  // IndentRainbow
  "indentRainbow.indicatorStyle": "light",
  "indentRainbow.lightIndicatorStyleLineWidth": 1,
  "indentRainbow.colors": [
    "rgba(127,255,127,0.4)",
    "rgba(255,255,64,0.4)",
    "rgba(255,127,255,0.4)",
    "rgba(79,236,236,0.4)"
  ],

  // Comment Anchors
  "commentAnchors.tags.anchors": {
    "ANCHOR": {
      "isBold": false,
      "iconColor": "default",
      "highlightColor": "#A8C023",
      "scope": "file"
    },
    "TODO": {
      "isBold": false,
      "iconColor": "blue",
      "highlightColor": "#3ea8ff",
      "scope": "workspace"
    },
    "BUG": {
      "isBold": false,
      "iconColor": "red",
      "highlightColor": "#F44336",
      "scope": "workspace"
    },
    "FIXME": {
      "isBold": false,
      "iconColor": "red",
      "highlightColor": "#F44336",
      "scope": "workspace"
    },
    "REVIEW": {
      "isBold": false,
      "iconColor": "orange",
      "highlightColor": "#FFB300",
      "scope": "workspace"
    },
    "NOTE": {
      "isBold": false,
      "iconColor": "green",
      "highlightColor": "#2ecc71",
      "scope": "file"
    },
    "DONE": {
      "isBold": false,
      "iconColor": "green",
      "highlightColor": "#2ecc71",
      "scope": "file"
    },
    "STUB": {
      "scope": "file",
      "enabled": false
    },
    "SECTION": {
      "scope": "file",
      "enabled": false
    },
    "LINK": {
      "scope": "file",
      "enabled": false
    }
  },

  // Code Spell Checker
  "cSpell.enableFiletypes": ["vimrc"],
  "cSpell.userWords": [
    "autofetch",
    "bilibili",
    "Codegeex",
    "codeium",
    "colour",
    "douyin",
    "easymotion",
    "feng",
    "filesize",
    "foldfix",
    "Grammarly",
    "highlightedyank",
    "hlsearch",
    "incsearch",
    "juejin",
    "Moegi",
    "neovim",
    "nuxt",
    "peachpuff",
    "powermode",
    "rgba",
    "tencent",
    "timi",
    "utools",
    "vimrc",
    "Vitesse",
    "vscodevim",
    "wechat",
    "weibo",
    "yuque",
    "zhihu",
    "zimfw",
    "zimrc",
    "zmodule"
  ],

  // ErrorLens
  "errorLens.enabledDiagnosticLevels": ["error", "warning", "info"],
  "errorLens.excludeBySource": ["cSpell", "Grammarly"],

  // Translate
  "commentTranslate.hover.string": true,
  "commentTranslate.hover.enabled": true,
  "commentTranslate.hover.variable": true,
  "commentTranslate.multiLineMerge": true,
  "commentTranslate.hover.concise": false,
  "commentTranslate.hover.content": false,
  "commentTranslate.maxTranslationLength": 1000,
  "commentTranslate.targetLanguage": "zh-CN",
  "commentTranslate.source": "Kaiqun.tencent-cloud-translate-tencentCloud",
}
