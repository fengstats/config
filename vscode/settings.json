{
  // Basic
  // turn off system sound
  "files.eol": "\n",
  "files.autoSave": "off",
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": false,
  "files.associations": {
    ".zimrc": "shellscript",
    "*.json": "jsonc"
  },
  "filesize.displayInfoOnTheRightSideOfStatusBar": true,
  "breadcrumbs.icons": false,
  "extensions.ignoreRecommendations": true,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "explorer.openEditors.visible": 20,
  "search.smartCase": true,
  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },

  // Window and Workbench
  "window.nativeTabs": false,
  "window.dialogStyle": "custom",
  "window.newWindowDimensions": "offset",
  "window.zoomLevel": 0.7,
  "window.commandCenter": false,
  "window.autoDetectColorScheme": false,
  // sundial
  "sundial.sunrise": "06:30",
  "sundial.sunset": "17:55",
  "sundial.interval": 30,
  "sundial.daySettings": {},
  "sundial.nightSettings": {},
  "workbench.iconTheme": "pop-icon-theme",
  "workbench.colorTheme": "Default Dark+",
  "workbench.preferredLightColorTheme": "Panda Moe",
  "workbench.preferredDarkColorTheme": "Panda Moe",
  "workbench.tree.expandMode": "singleClick",
  "workbench.tree.indent": 10,
  "workbench.list.smoothScrolling": true,
  // 关闭文件后是否聚焦到最近打开过的文件
  "workbench.editor.focusRecentEditorAfterClose": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.showTabs": true,
  "workbench.editor.showIcons": true,
  "workbench.editor.closeOnFileDelete": false,
  "workbench.editor.wrapTabs": false,
  "workbench.editor.limit.value": 20,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.tabSizingFixedMinWidth": 80,

  // Editor
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.useInlineCompletions": true,
  "editor.linkedEditing": true,
  "editor.tabSize": 2,
  "editor.fontSize": 13,
  "editor.lineNumbers": "on",
  // "editor.lineHeight": 1.5,
  "editor.fontFamily": "Input Mono Freeze, monospace",
  // "editor.fontFamily": "Input Mono, monospace",
  // "editor.fontFamily": "Monaco, monospace",
  // "editor.fontFamily": "JetBrains Mono, monospace",
  // "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'zero'",
  // "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss06', 'ss12', 'ss13",
  "editor.minimap.enabled": false,
  "editor.minimap.size": "proportional",
  "editor.suggest.insertMode": "replace",
  "editor.quickSuggestions": {
    "strings": "on"
  },
  "editor.unicodeHighlight.allowedLocales": {
    // 允许中文符号显示而不突出高亮
    "zh-hant": true
  },
  "editor.cursorSurroundingLines": 4,
  "editor.suggest.localityBonus": true,
  "editor.suggest.shareSuggestSelections": true,
  // NOTE: 使用 snippets 时阻止快速提示信息
  "editor.suggest.snippetsPreventQuickSuggestions": true,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.detectIndentation": true,
  "editor.accessibilitySupport": "off",
  "editor.renderLineHighlight": "line",
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.find.addExtraSpaceOnTop": false,
  "editor.glyphMargin": true,
  "editor.multiCursorModifier": "alt",
  "editor.renderWhitespace": "selection",
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.guides.bracketPairs": "active",
  "editor.smoothScrolling": true,
  "editor.scrollBeyondLastLine": true,
  "editor.stickyScroll.enabled": false,
  "editor.hover.sticky": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.fixAll.eslint": true
  },
  // NOTE: 从当前主题重写编辑器某些关键字样式
  "editor.semanticTokenColorCustomizations": {
    "enabled": true
  },
  "editor.tokenColorCustomizations": {
    "[Houston]": {
      "comments": "#adb5ad"
    },
    "[Default Dark+]": {
      "comments": "#adb5ad"
    },
    "[Bearded Theme Monokai Stone]": {
      "comments": "#adb5ad"
    },
    "[Moegi Light]": {
      "comments": "#7f8c8d"
    },
    "[Spacegray Eighties Dark]": {
      "comments": "#adb5ad",
      "textMateRules": [
        {
          // JSON key
          "scope": ["support.type.property-name"],
          "settings": {
            "foreground": "#ff7675"
          }
        },
        {
          // 符号：前后引号 + 被引号包围的字符
          "scope": ["punctuation.definition.string.begin", "punctuation.definition.string.end", "string.quoted"],
          "settings": {
            "foreground": "#55efc4"
          }
        },
        {
          // markdown 无序列表
          "scope": ["markup.list.unnumbered"],
          "settings": {
            "foreground": "#bdc3c7"
          }
        },
        {
          // markdown 链接
          "scope": ["markup.underline"],
          "settings": {
            "foreground": "#48dbfb"
          }
        }
      ]
    },
    "[Vitesse Dark]": {
      "comments": "#909090"
    },
    "[Ayu Mojave]": {
      "comments": "#a2aaa2"
    },
    "[One Dark Pro Darker]": {
      "comments": "#a2aaa2"
    },
    "[Moegi Dark Vitesse]": {
      "comments": "#a1a7a1"
    },
    "[GitHub Dark Dimmed]": {
      "comments": "#adb5ad"
    },
    "[Panda Syntax][Panda Moe]": {
      "comments": "#adb5ad",
      "textMateRules": [
        // {
        //   "scope": ["variable"],
        //   "settings": {
        //     "foreground": "#ffbe76",
        //     "fontStyle": ""
        //   }
        // },
        // {
        //   "scope": ["variable.other", "variable.parameter"],
        //   "settings": {
        //     "foreground": "#ff0000",
        //     "fontStyle": ""
        //   }
        // },
        // NOTE: Vue 项目中子组件和组件库标签的颜色关键字
        {
          "scope": ["support.class.component"],
          "settings": {
            "foreground": "#54e4f4",
            "fontStyle": ""
          }
        },
        {
          "scope": [
            "entity.name.tag",
            "entity.name.tag.html",
            "entity.name.tag.css"
            // "source.vue"
            // "meta.tag.structure.any.html",
            // "meta.tag.other.html",
            // "meta.tag.metadata.script.html",
            // "entity.name.tag.jade",
            // "entity.name.tag.pug",
            // "meta.tag.other"
          ],
          "settings": {
            "foreground": "#ed9cc2"
          }
        }
      ]
    },
    "[Panda Moe]": {
      "textMateRules": [
        {
          "scope": [
            // new URL()
            "entity.name.type",
            "entity.name.type.class"
            // "support.class"
          ],
          "settings": {
            "foreground": "#6FC1FF",
            "fontStyle": ""
          }
        },

        {
          "scope": [
            // css 原生属性
            "support.constant.property-value.css"
          ],
          "settings": {
            "foreground": "#19F1D0"
          }
        },
        {
          "scope": [
            "source.vue",
            // 变量/属性
            "variable.other.property",
            // 只读常量
            "readonly",
            // js/ts
            "source.js",
            "source.ts",
            "variable.other.object.ts",
            "variable.other.readwrite.ts",
            "support.type.property-name.css",
            "variable.other.constant.object.ts",
            "variable.other.less"
          ],
          "settings": {
            "foreground": "#ED9CC2",
            "fontStyle": ""
          }
        },
        {
          "scope": [
            // css 中的数字
            "constant.numeric.css",
            // deg
            "keyword.other.unit.deg.css",
            // css 百分比
            "keyword.other.unit.percentage.css",
            // px
            "keyword.other.unit.px.css"
          ],
          "settings": {
            "foreground": "#FFCC95"
          }
        },
        {
          "scope": [
            // 标签内的文字
            "text.html.derivative",
            // 终结符（分号）
            "punctuation.terminator",
            // 分隔符（逗号/等于）
            "punctuation.separator",
            // .vue: 冒号/引号
            "meta.tag.other"
          ],
          "settings": {
            "foreground": "#E6E6E6"
          }
        },
        {
          "scope": ["punctuation.definition.tag"],
          "settings": {
            "foreground": "#ADB5AD",
            "fontStyle": ""
          }
        }
      ]
    },
    "textMateRules": [
      {
        "name": "Comment Italics",
        "scope": ["comment", "punctuation.definition.comment"],
        "settings": {
          "fontStyle": ""
        }
      }
      // {
      //   "name": "Keyword Bold",
      //   "scope": ["keyword", "storage.type", "storage.modifier"],
      //   "settings": {
      //     "fontStyle": "bold"
      //   }
      // }
    ]
  },
