  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.confirmOnKill": "never",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,

  // Vim
  "vim.leader": "<space>",
  "vim.easymotion": false,
  "vim.useSystemClipboard": true,
  "vim.incsearch": true,
  "vim.useCtrlKeys": false,
  "vim.hlsearch": true,
  "vim.surround": true,
  "vim.sneak": true,
  // 设置 jk 遇到折叠代码时不自动展开
  "vim.foldfix": true,
  // yy 操作时显示高亮
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 120,
  "vim.highlightedyank.color": "rgba(46, 213, 115, 0.6)",
  "vim.highlightedyank.textColor": "white",
  // TODO: 崔大写的 leap 插件，具体记录看 2023-05-21 日记，先用着
  "vim.leap.enable": false,
  "vim.leap.bidirectionalSearch": true,
  "vim.leap.showMarkerPosition": "target",
  "vim.leap.labels": "sklyuiopnm,qwertzxcvbahdgjf;",
  "vim.leap.marker.charColor": "#ffffff",
  "vim.leap.marker.backgroundColors": ["#d63031", "#3742fa"],
  "vim.leap.caseSensitive": false,
  "vim.handleKeys": {
    "<C-f>": false,
    "<C-v>": true,
    "<C-a>": true,
    "<C-x>": true,
    "<C-i>": true,
    "<C-o>": true,
    "<C-y>": true
  },
