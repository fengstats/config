  // ErrorLens
  "errorLens.fontFamily": "Monaco, monospace",
  "errorLens.fontWeight": "normal",
  "errorLens.margin": "20px",
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "errorLens.excludeBySource": ["cSpell", "Grammarly", "eslint"],
  // "errorLens.messageTemplate": "$severity($source): $message",
  // "errorLens.messageTemplate": "$severity：$message ($source) $count",

  // Formatter
  "editor.formatOnSave": true,
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.printWidth": 120,
  "prettier.proseWrap": "never",
  // "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript][jsonc][vue][typescript][html][css][less]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[html]": {
    "editor.suggest.insertMode": "replace"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
