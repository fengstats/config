[
  // Vim or NeoVim
  // 增量范围选中扩大、缩小
  {
    "key": "enter",
    "command": "expand_region",
    "when": "editorTextFocus && (vim.mode == 'Normal' || vim.mode == 'Visual') && !suggestWidgetVisible"
  },
  {
    "key": "backspace",
    "command": "undo_expand_region",
    "when": "editorTextFocus && editorHasSelection && vim.mode == 'Visual'"
  },

  // Basic
  {
    "key": "cmd+l",
    "command": "markdown.extension.checkTaskList",
    "when": "editorTextFocus && editorLangId =~ /^markdown$|^rmd$|^quarto$/"
  },
  // 选择最近的文件工作区
  {
    "key": "cmd+r",
    "command": "workbench.action.openRecent"
    // 只能在聚焦文件管理、编辑器、Panel 时使用
    // "when": "filesExplorerFocus || editorFocus || panelFocus"
  },
  // 搜索面板刷新搜索结果，需要聚焦侧边栏以及搜索面板可见
  {
    "key": "cmd+r",
    "command": "search.action.refreshSearchResults",
    "when": "sideBarFocus && searchViewletVisible"
  },
  // 清空扩展输入信息（就当我没事给自己找点事干好了，这个配置挺鸡肋的，直接 cmd+a 然后 del 就行哈哈哈哈）
  {
    "key": "cmd+k",
    "command": "workbench.extensions.action.clearExtensionsSearchResults",
    "when": "sideBarFocus"
  },
  // 搜索面板调出替换输入框的快捷键
  {
    "key": "cmd+g",
    "command": "workbench.action.replaceInFiles",
    "when": "sideBarFocus"
  },
  // 替换单个文件内的某处匹配（在搜索面板中使用，需聚焦具体匹配项）
  {
    "key": "enter",
    "command": "search.action.replace",
    "when": "matchFocus && replaceActive && searchViewletVisible"
  },
  // Run Code
  {
    "key": "cmd+alt+n",
    "command": "code-runner.run"
  },
  // 切换左右 panel
  {
    "key": "cmd+[",
    "command": "workbench.action.previousPanelView",
    "when": "panelFocus"
  },
  {
    "key": "cmd+]",
    "command": "workbench.action.nextPanelView",
    "when": "panelFocus"
  },
  // 打开一个新窗口
  {
    "key": "cmd+ctrl+n",
    "command": "workbench.action.newWindow"
  },
  // 打开当前文件所在访达位置
  {
    "key": "cmd+shift+r",
    "command": "revealFileInOS"
    // "when": "!editorFocus"
  },
  // 在不同的面板（组件）之间进行聚焦
  {
    "key": "cmd+shift+h",
    "command": "workbench.action.navigateLeft"
  },
  {
    "key": "cmd+shift+l",
    "command": "workbench.action.navigateRight"
  },
  {
    "key": "cmd+shift+k",
    "command": "workbench.action.navigateUp"
  },
  {
    "key": "cmd+shift+j",
    "command": "workbench.action.navigateDown"
  },
  // 聚焦文件管理面板
  {
    "key": "cmd+shift+;",
    "command": "workbench.view.explorer",
    "when": "viewContainer.workbench.view.explorer.enabled"
  },
  // 聚焦全局搜索面板
  {
    "key": "cmd+shift+f",
    "command": "workbench.action.findInFiles"
  },
  // 聚焦 gitlens
  {
    "key": "cmd+shift+g",
    "command": "workbench.view.scm",
    "when": "workbench.scm.active"
  },
  // 断点调试
  {
    "key": "cmd+5",
    "command": "workbench.action.debug.start",
    "when": "debuggersAvailable && debugState == 'inactive'"
  },
  {
    "key": "cmd+5",
    "command": "workbench.action.debug.continue",
    "when": "debugState == 'stopped'"
  },
  // 切换随机背景图（暂时不用了，影响写代码速度）
  // {
  //   "key": "shift+cmd+7",
  //   "command": "extension.backgroundCover.refresh"
  // },
  // 让你的 Esc 优先执行取消提示建议的操作，然后才会识别进入 normal 模式
  // {
  //   "key": "escape",
  //   "command": "hideSuggestWidget",
  //   "when": "suggestWidgetVisible && textInputFocus"
  // },
  // vsc 调用 vim 指令方式
  // {
  //   "key": "cmd+shift+h",
  //   "command": "vim.remap",
  //   "when": "vim.mode == 'Normal'",
  //   "args": {
  //     "after": ["<c-w>", "h"]
  //   }
  // },

  // File
  // NOTE: 没什么问题（去掉了 !explorerResourceIsRoot 达到了聚焦资源管理器根目录中新建的功能，但不知道可能会有什么隐患，先观望一下）
  {
    "key": "cmd+n",
    "command": "explorer.newFile"
  },
  // 新建未命名文件
  {
    "key": "cmd+t",
    "command": "workbench.action.files.newUntitledFile"
  },
  // 在文件管理器中搜索
  {
    "key": "f",
    "command": "list.find",
    "when": "listFocus && listSupportsFind && !inputFocus"
  },
  {
    "key": "/",
    "command": "list.find",
    "when": "listFocus && listSupportsFind && !inputFocus"
  },
  // 新建文件/文件夹
  {
    "key": "a",
    "command": "explorer.newFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "shift+a",
    "command": "explorer.newFolder",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceReadonly && !inputFocus"
  },
  // 复制/剪切/粘贴
  {
    "key": "y",
    "command": "filesExplorer.copy",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "x",
    "command": "filesExplorer.cut",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "p",
    "command": "filesExplorer.paste",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  // 重命名/删除
  {
    "key": "r",
    "command": "renameFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceIsRoot && !explorerResourceReadonly && !inputFocus"
  },
  {
    "key": "d",
    "command": "deleteFile",
    "when": "explorerViewletVisible && filesExplorerFocus && !explorerResourceReadonly && !inputFocus"
  },

  // Tabs
  // 在当前编辑组内切换左右文件（将当前文件与左右文件换位置）
  {
    "key": "cmd+[",
    "command": "workbench.action.moveEditorLeftInGroup",
    // 解决和 panel 切换快捷键冲突的问题
    "when": "!panelFocus"
  },
  {
    "key": "cmd+]",
    "command": "workbench.action.moveEditorRightInGroup",
    "when": "!panelFocus"
  },
  // 在当前编辑组内左右聚焦文件
  {
    "key": "cmd+shift+[",
    "command": "workbench.action.previousEditorInGroup"
  },
  {
    "key": "cmd+shift+]",
    "command": "workbench.action.nextEditorInGroup"
  },
  // 将当前编辑组的文件移动到上一个/下一个编辑组中 | << and >>
  {
    "key": "cmd+shift+, cmd+shift+,",
    "command": "workbench.action.moveEditorToPreviousGroup"
  },
  {
    "key": "cmd+shift+. cmd+shift+.",
    "command": "workbench.action.moveEditorToNextGroup"
  },

  // Editor
  // Codeium 的 Command 面板
  // TODO: 找了一圈没看到怎么用键盘快捷方式 cancel 掉这个 command，ESC 直接切 Vim 的 normal 模式了
  // 先鼠标点掉吧……
  {
    "key": "alt+i",
    "command": "codeium.openCodeiumCommand",
    "when": "codeium.commandEnabled && editorTextFocus && !inlineSuggestionsVisible"
  },
  // 替换当前行和上/下行
  {
    "key": "alt+k",
    "command": "editor.action.moveLinesUpAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "alt+j",
    "command": "editor.action.moveLinesDownAction",
    "when": "editorTextFocus && !editorReadonly"
  },
  // 查找替换
  {
    "key": "cmd+g",
    "command": "editor.action.startFindReplaceAction",
    "when": "editorFocus"
  },
  // 向下/上寻找当前文件出现的提示提示/警告/错误
  {
    "key": "cmd+8",
    "command": "editor.action.marker.next",
    "when": "editorFocus"
  },
  {
    "key": "cmd+shift+8",
    "command": "editor.action.marker.prev",
    "when": "editorFocus"
  },
  // 调整编辑组区域宽度大小（缩小、放大、恢复）
  {
    "key": "cmd+shift+-",
    "command": "workbench.action.decreaseViewWidth"
    // "when": "editorTextFocus && !editorReadonly"
  },
  {
    "key": "cmd+shift+=",
    "command": "workbench.action.increaseViewWidth"
  },
  {
    "key": "cmd+shift+0",
    "command": "workbench.action.evenEditorWidths"
  },
  // 垂直分屏
  {
    "key": "cmd+shift+\\",
    "command": "workbench.action.splitEditorToBelowGroup"
  },
  // {
  //   "key": "ctrl+o",
  //   "command": "workbench.action.navigateBack"
  // },
  // {
  //   "key": "ctrl+i",
  //   "command": "workbench.action.navigateForward"
  // },

  // Terminal
  // 创建终端（根据当前编辑区聚焦文件的位置）
  {
    "key": "ctrl+`",
    "command": "openInIntegratedTerminal"
    // 打开外部终端：具体看 settings.json 中 osxExec 设置的
    // "command": "openInTerminal"
  },
  // 创建终端（水平方向）
  {
    "key": "cmd+d",
    "command": "workbench.action.terminal.split",
    "when": "terminalFocus && terminalProcessSupported || terminalFocus && terminalWebExtensionContributedProfile"
  },
  // 创建终端（垂直方向）
  {
    "key": "cmd+shift+d",
    "command": "workbench.action.terminal.new",
    "when": "terminalFocus && terminalProcessSupported || terminalWebExtensionContributedProfile"
  },
  {
    "key": "cmd+shift+n",
    "command": "workbench.action.terminal.new",
    "when": "terminalProcessSupported || terminalWebExtensionContributedProfile"
  },
  // 从任意地方聚焦到终端，i = iTerm
  {
    "key": "cmd+shift+i",
    "command": "workbench.action.terminal.focus"
  },
  // 最大化终端
  {
    "key": "cmd+shift+enter",
    "command": "workbench.action.toggleMaximizedPanel",
    "when": "terminalFocus"
  },
  // 上下拉伸终端（快捷键原本是编辑器整体放大缩小, 被我禁用了）
  {
    "key": "cmd+shift+-",
    "command": "workbench.action.terminal.resizePaneDown",
    "when": "panelFocus"
    // "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
  },
  {
    "key": "cmd+shift+=",
    "command": "workbench.action.terminal.resizePaneUp",
    "when": "panelFocus"
    // "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
  },
  // 左右终端聚焦
  {
    "key": "cmd+shift+h",
    "command": "workbench.action.terminal.focusPreviousPane",
    "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
  },
  {
    "key": "cmd+shift+l",
    "command": "workbench.action.terminal.focusNextPane",
    "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
  },
  // 可以从终端返回编辑区中而不关闭终端
  {
    "key": "cmd+shift+k",
    "command": "workbench.action.navigateUp",
    "when": "terminal.active && terminalFocus"
  },
  // TODO: 上下终端聚焦，用来覆盖 Tabs 中设置左右聚焦 tab 功能，后续再看看能不能优化
  {
    "key": "cmd+shift+[",
    "command": "workbench.action.terminal.focusPrevious",
    "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
  },
  {
    "key": "cmd+shift+]",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus && terminalHasBeenCreated && !terminalEditorFocus || terminalFocus && terminalProcessSupported && !terminalEditorFocus"
  },

  // Setting Default
  {
    "key": "ctrl+shift+`",
    "command": "-workbench.action.terminal.new",
    "when": "terminalProcessSupported || terminalWebExtensionContributedProfile"
  },
  {
    "key": "alt+cmd+h",
    "command": "-rest-client.history"
  },
  {
    "key": "ctrl+f",
    "command": "-cursorRight",
    "when": "textInputFocus"
  },
  {
    "key": "ctrl+f",
    "command": "-extension.vim_ctrl+f",
    "when": "editorTextFocus && vim.active && vim.use<C-f> && !inDebugRepl && vim.mode != 'Insert'"
  },
  {
    "key": "ctrl+cmd+f",
    "command": "-workbench.action.toggleFullScreen",
    "when": "!isIOS"
  },
  {
    "key": "ctrl+f",
    "command": "workbench.view.search",
    "when": "workbench.view.search.active && neverMatch =~ /doesNotMatch/"
  },
  {
    "key": "ctrl+f",
    "command": "workbench.action.terminal.searchWorkspace",
    "when": "terminalFocus && terminalProcessSupported && terminalTextSelected"
  },

  // Setting Disabled
  {
    "key": "shift+cmd+f",
    "command": "-workbench.view.search",
    "when": "workbench.view.search.active && neverMatch =~ /doesNotMatch/"
  },
  {
    "key": "shift+cmd+f",
    "command": "-workbench.action.terminal.searchWorkspace",
    "when": "terminalFocus && terminalProcessSupported && terminalTextSelected"
  },
  {
    "key": "shift+cmd+f",
    "command": "-workbench.action.findInFiles"
  },
  {
    "key": "shift+cmd+h",
    "command": "-workbench.action.replaceInFiles"
  },
  {
    "key": "ctrl+`",
    "command": "-workbench.action.terminal.toggleTerminal",
    "when": "terminal.active"
  },
  {
    "key": "ctrl+k",
    "command": "-deleteAllRight",
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "shift+cmd+=",
    "command": "-workbench.action.zoomIn"
  },
  {
    "key": "shift+cmd+-",
    "command": "-workbench.action.zoomOut"
  },
  {
    "key": "cmd+-",
    "command": "-workbench.action.zoomOut"
  },
  {
    "key": "cmd+=",
    "command": "-workbench.action.zoomIn"
  },
  {
    "key": "ctrl+r",
    "command": "-shell.runCommand"
  },
  {
    "key": "ctrl+o",
    "command": "-lineBreakInsert",
    "when": "textInputFocus && !editorReadonly"
  },
  {
    "key": "alt+cmd+f",
    "command": "-editor.action.startFindReplaceAction",
    "when": "editorFocus || editorIsOpen"
  },
  {
    "key": "alt+cmd+up",
    "command": "-extension.vim_cmd+alt+up",
    "when": "editorTextFocus && vim.active && !inDebugRepl"
  },
  {
    "key": "alt+cmd+down",
    "command": "-extension.vim_cmd+alt+down",
    "when": "editorTextFocus && vim.active && !inDebugRepl"
  },
  {
    "key": "cmd+n",
    "command": "-workbench.action.files.newUntitledFile"
  },
  {
    "key": "cmd+t",
    "command": "-workbench.action.showAllSymbols"
  },
  {
    "key": "ctrl+alt+n",
    "command": "-code-runner.run"
  },
  {
    "key": "ctrl+shift+f7",
    "command": "-extension.backgroundCover.refresh"
  },
  {
    "key": "cmd+l cmd+o",
    "command": "-fiveServer.start",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+l cmd+c",
    "command": "-fiveServer.close",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+5",
    "command": "-workbench.action.focusFifthEditorGroup"
  },
  {
    "key": "cmd+i",
    "command": "-codeium.openCodeiumCommand",
    "when": "codeium.commandEnabled && editorTextFocus && !inlineSuggestionsVisible"
  },
  {
    "key": "alt+escape",
    "command": "-editor.action.triggerSuggest",
    "when": "editorHasCompletionItemProvider && textInputFocus && !editorReadonly && !suggestWidgetVisible"
  },
  {
    "key": "cmd+e",
    "command": "-editor.action.toggleScreenReaderAccessibilityMode",
    "when": "accessibilityHelpIsShown"
  }
]
