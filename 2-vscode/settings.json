{
  // Basic
  "fonted.font": "Arial",
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 20,
  "explorer.confirmDelete": false,
  "security.workspace.trust.untrustedFiles": "prompt",
  "diffEditor.renderSideBySide": false,
  "files.eol": "\n",
  "files.autoSave": "off",
  "files.insertFinalNewline": true,
  "files.simpleDialog.enable": false,
  "files.associations": {
    ".zimrc": "shellscript",
    "*.json": "jsonc",
    "*.conf": "plaintext"
  },
  "search.smartCase": true,
  "search.exclude": {
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/bower_components": true,
    "**/dist/**": true,
    "**/logs": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/tmp": true,
    "**/yarn.lock": true
  },

  // Window
  "window.dialogStyle": "custom",
  "window.newWindowDimensions": "offset",
  "window.commandCenter": true,
  "window.zoomLevel": 0.4,
  "workbench.tree.enableStickyScroll": true,
  "workbench.activityBar.location": "top",
  "workbench.iconTheme": "vscode-great-icons",
  "workbench.colorTheme": "Panda Moe",
  "workbench.startupEditor": "none",
  "workbench.productIconTheme": "icons-carbon",
  "workbench.list.smoothScrolling": true,
  "workbench.editor.focusRecentEditorAfterClose": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.limit.value": 12,
  "workbench.editor.limit.perEditorGroup": true,
  "workbench.editor.limit.enabled": true,
  "workbench.colorCustomizations": {
    // 终端命令提示
    "terminal.ansiBrightBlack": "#000000",
    // "editor.lineHighlightBackground": "#ffffff00",
    // 底部控制栏
    // "statusBar.background": "#333333",
    "[Default Dark+][GitHub Dark Classic]": {
      "terminal.ansiBlue": "#8adcf1",
      "terminal.ansiRed": "#ff6b81",
      "terminal.ansiBrightRed": "#ff7675"
    },
    "[Panda Syntax][Panda Moe]": {
      "badge.background": "#aaaaaa",
      "badge.foreground": "#000000",
      "quickInput.background": "#202020bf",
      "widget.shadow": "#0000008f",
      "titleBar.border": "#aaaaaa2f",
      "list.activeSelectionBackground": "#71edd11f",
      "list.focusBackground": "#00000000",
      "list.inactiveSelectionBackground": "#aaaaaa2f",
      "tab.border": "#aaaaaa2f",
      "contrastBorder": "#0000008f",
      "tab.activeBorder": "#71edd1df",
      "textCodeBlock.background": "#aaaaaa4f",
      "editor.selectionHighlightBorder": "#71edd14f",
      "editor.selectionHighlightBackground": "#aaaaaa2f",
      "editor.wordHighlightBorder": "#71edd15f",
      "editor.wordHighlightBackground": "#aaaaaa2f",
      "editorCursor.background": "#ffffff",
      "editorLineNumber.activeForeground": "#71edd1",
      "editorGroupHeader.tabsBorder": "#aaaaaa4f",
      "editorWidget.foreground": "#cccccc",
      "editorWidget.background": "#202020ef",
      "editorSuggestWidget.selectedForeground": "#ffffff",
      "editorSuggestWidget.selectedBackground": "#0a3d62",
      "editorHoverWidget.background": "#202020ef",
      "scrollbarSlider.activeBackground": "#aaaaaa2f",
      "scrollbarSlider.background": "#aaaaaa2f",
      "scrollbarSlider.hoverBackground": "#aaaaaa2f",
      "terminal.ansiBlue": "#8adcf1",
      "terminal.ansiRed": "#ff6b81",
      "terminal.ansiBrightRed": "#ff7675"
      // "editor.lineHighlightBackground": "#71edd11f",
    }
  },

  // Sundial
  "workbench.preferredLightColorTheme": "GitHub Plus", // 白天主题
  "workbench.preferredDarkColorTheme": "Default Dark+", // 夜晚主题
  "sundial.sunrise": "07:00", // 什么时候切换白天主题
  "sundial.sunset": "17:00", // 什么时候切换夜晚主题
  "sundial.interval": 30, // 多久检测一次是否切换，单位为分钟
  // 白天主题其他配置，可以加入图标字体之类的……
  "sundial.daySettings": {
    // "workbench.iconTheme": "file-icons"
  },
  // 同理，夜晚主题配置
  "sundial.nightSettings": {},

  // Editor
  "editor.tabSize": 2,
  "editor.fontSize": 13,
  "editor.lineNumbers": "on",
  "editor.lineHeight": 1.5,
  "editor.linkedEditing": false,
  "editor.fontFamily": "Input Mono Freeze, monospace",
  // "editor.fontFamily": "JetBrains Mono, monospace",
  // "editor.fontFamily": "Monaco, monospace",
  // "editor.fontFamily": "Input Mono, monospace",
  "editor.minimap.enabled": false,
  "editor.cursorSurroundingLines": 5,
  "editor.suggest.snippetsPreventQuickSuggestions": true,
  "editor.accessibilitySupport": "off",
  "editor.renderLineHighlight": "all",
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.guides.bracketPairs": "active",
  "editor.smoothScrolling": true,
  "editor.stickyScroll.enabled": false,
  "editor.inlineSuggest.showToolbar": "always",
  "editor.unicodeHighlight.allowedLocales": {
    "zh-hant": true
  },
  "editor.semanticTokenColorCustomizations": {
    "enabled": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll": "never",
    "source.fixAll.eslint": "explicit"
  },
  "editor.tokenColorCustomizations": {
    "[Fleet Dark][Fleet Ocean]": { "comments": "#a1a7a1df" },
    "[Default Light Modern][Moegi Light]": { "comments": "#218c74" },
    "[Evondev Dracula Darker Contrast]": { "comments": "#95a5a6" },
    "[GitHub Dark Classic][Atom One Dark]": { "comments": "#95a5a6" },
    "[Default Dark+]": { "comments": "#adb5ad" },
    "[Moegi Dark Vitesse]": { "comments": "#a1a7a1" },
    // "[Default Light Modern][Moegi Light Vitesse]": { "comments": "#95a5a6" },
    "textMateRules": [
      {
        "name": "Comment Italics",
        "scope": [
          "comment",
          "punctuation.definition.comment",
          "comment.line.double-slash",
          "comment.block.documentation"
        ],
        "settings": { "fontStyle": "" }
      }
    ]
  },
  // "emmet.showSuggestionsAsSnippets": true,
  // "editor.quickSuggestions": {
  //   "strings": "on"
  // },

  // Terminal
  "terminal.external.osxExec": "iTerm",
  "terminal.integrated.gpuAcceleration": "on",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.confirmOnKill": "never",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontFamily": "Input Mono Freeze, Hack Nerd Font Mono, monospace",
  "terminal.integrated.tabs.defaultColor": "terminal.ansiGreen",
  "terminal.integrated.tabs.defaultIcon": "terminal-bash",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1",
    "NO_COLOR": null
  },
  // "terminal.integrated.fontFamily": "Monaco, Hack Nerd Font Mono, monospace",
  // "terminal.integrated.fontFamily": "JetBrains Mono, Hack Nerd Font Mono,monospace",

  // Formatter
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",
  "prettier.proseWrap": "preserve",
  "prettier.printWidth": 120,
  "editor.formatOnSave": true,
  "formatFiles.excludedFolders": ["node_modules", ".vscode", ".git", "dist", ".chrome", "attachments"],
  "formatFiles.extensionsToInclude": ".md",
  "[json]": { "editor.defaultFormatter": "vscode.json-language-features" },
  "[markdown]": { "editor.defaultFormatter": "esbenp.prettier-vscode" },
  "[javascript][jsonc][vue][typescript][html][css][less]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },

  // Extensions
  "extensions.ignoreRecommendations": true,
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1,
    "asvetliakov.vscode-neovim": 2,
    "BrandonKirbyson.vscode-animations": 3
  },
  "js/ts.implicitProjectConfig.checkJs": true,

  // Vim
  "vim.leader": "<space>",
  "vim.useSystemClipboard": true,
  "vim.hlsearch": true,
  "vim.foldfix": true,
  "vim.easymotion": false,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.duration": 100,
  "vim.highlightedyank.color": "#00000000",
  "vim.highlightedyank.textColor": "white",
  "vim.flash.enable": true,
  "vim.operatorPendingModeKeyBindings": [
    { "before": ["H"], "after": ["^"] },
    { "before": ["L"], "after": ["g", "_"] }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": ["\""], "after": ["S", "\""] },
    { "before": ["'"], "after": ["S", "'"] },
    { "before": ["("], "after": ["S", ")", "e"] },
    { "before": ["p"], "after": ["p", "g", "v", "y"] },
    { "before": ["K"], "after": ["4", "k"] },
    { "before": ["J"], "after": ["4", "j"] },
    { "before": ["H"], "after": ["^"] },
    { "before": ["L"], "after": ["g", "_"] },
    { "before": ["g", "h"], "commands": ["editor.action.showHover"] },
    { "before": ["leader", "i", "w"], "after": ["V", "$", "%", "o"] },
    { "before": ["leader", "d", "f"], "after": ["V", "$", "%", "d"] }
    // { "before": ["backspace"], "after": ["\"", "_", "c"] }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    { "before": ["j"], "after": ["g", "j"] },
    { "before": ["k"], "after": ["g", "k"] },
    { "before": ["J"], "after": ["5", "g", "j"] },
    { "before": ["K"], "after": ["5", "g", "k"] },
    { "before": ["H"], "after": ["^"] },
    { "before": ["L"], "after": ["g", "_"] },
    { "before": ["U"], "after": ["<c-r>"] },
    { "before": ["n"], "after": ["n", "z", "z"] },
    { "before": ["N"], "after": ["N", "z", "z"] },
    { "before": ["["], "after": ["{"] },
    { "before": ["]"], "after": ["}"] },
    { "before": [",", ","], "after": ["A", ",", "esc"] },
    { "before": ["'", "'"], "after": ["v", "i", "w", "S", "'", "e", "l"] },
    { "before": ["\"", "\""], "after": ["v", "i", "w", "S", "\"", "e", "l"] },
    { "before": ["g", "r"], "commands": ["editor.action.goToReferences"] },
    { "before": ["z", "C"], "commands": ["editor.foldAll"] },
    { "before": ["z", "O"], "commands": ["editor.unfoldAll"] },
    { "before": ["leader", ";"], "commands": [":noh"] },
    { "before": ["leader", "o"], "commands": ["extension.toggleBool"] },
    { "before": ["leader", "e"], "commands": ["workbench.action.toggleSidebarVisibility"] },
    { "before": ["leader", "l"], "commands": ["workbench.action.toggleAuxiliaryBar"] },
    { "before": ["leader", "q"], "commands": ["workbench.action.closeActiveEditor"] },
    { "before": ["leader", "w"], "commands": ["workbench.action.files.saveWithoutFormatting"] },
    { "before": ["leader", "["], "after": ["[", "{"] },
    { "before": ["leader", "]"], "after": ["]", "}"] },
    { "before": ["leader", "d", "f"], "after": ["V", "$", "%", "d"] },
    { "before": ["leader", "i", "w"], "after": ["V", "$", "%", "o"] }
    // NOTE: 2023-11-17 决定这个快捷键，重新适应 Command+S
    // 就是让自己少记一个快捷方式，因为其他平台可能会兼容 Command+S，但可能不会提供给你自定义 leader 键的方式
    // { "before": ["leader", "s"], "commands": ["workbench.action.files.save"] },
    // 设置原生 f 命令
    // { "before": ["f"], "after": ["\\"] },
    // 设置 fash.vim 查找键
    // { "before": ["s"], "after": ["f"] },
    // 设置 leap 扩展查找键
    // { "before": ["s"], "commands": ["leap.find"] },
    // 设置 easymotion 查找键
    // { "before": ["s"], "after": ["<space>", "<space>", "2", "s"] },
  ],

  // NeoVim
  // "vscode-neovim.revealCursorScrollLine": true,
  // "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/opt/neovim/bin/nvim",
  // "vscode-neovim.neovimInitVimPaths.darwin": "/Users/feng/.vim/nvim.vim",

  // Git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "never",
  "git.ignoreRebaseWarning": true,
  "gitlens.graph.minimap.enabled": false,

  // Codegeex / Codeium
  "Codegeex.Privacy": true,
  "codeium.enableSearch": false,
  "codeium.enableCodeLens": false,
  "codeium.enableConfig": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "jsonc": false
  },

  // Markdown
  "markdown-preview-github-styles.colorTheme": "light",
  "markdown-preview-github-styles.lightTheme": "light_tritanopia",
  "markdown-preview-github-styles.darkTheme": "dark_dimmed",

  // IndentRainbow
  "indentRainbow.indicatorStyle": "light",
  "indentRainbow.lightIndicatorStyleLineWidth": 1,
  "indentRainbow.colors": [
    "rgba(127,255,127,0.4)",
    "rgba(255,255,64,0.4)",
    "rgba(255,127,255,0.4)",
    "rgba(79,236,236,0.4)"
  ],

  // Comment Anchors
  "commentAnchors.tags.anchors": {
    "ANCHOR": {
      "isBold": false,
      "iconColor": "default",
      "highlightColor": "#A8C023",
      "scope": "file"
    },
    // BUG: bug
    "BUG": {
      "isBold": false,
      "iconColor": "red",
      "highlightColor": "#F44336",
      "scope": "workspace"
    },
    // TODO: 代办
    "TODO": {
      "isBold": false,
      "iconColor": "blue",
      "highlightColor": "#3ea8ff",
      "scope": "workspace"
    },
    // FIXME: 记得修复我！！！
    "FIXME": {
      "isBold": false,
      "iconColor": "red",
      "highlightColor": "#F44336",
      "scope": "workspace"
    },
    // REVIEW: 需要审查
    "REVIEW": {
      "isBold": false,
      "iconColor": "orange",
      "highlightColor": "#FFB300",
      "scope": "workspace"
    },
    // NOTE: 笔记
    "NOTE": {
      "isBold": false,
      "iconColor": "green",
      "highlightColor": "#2ecc71",
      "scope": "file"
    },
    // DONE: 完成
    "DONE": {
      "isBold": false,
      "iconColor": "green",
      "highlightColor": "#2ecc71",
      "scope": "file"
    },
    "STUB": {
      "scope": "file",
      "enabled": false
    },
    "SECTION": {
      "scope": "file",
      "enabled": false
    },
    "LINK": {
      "scope": "file",
      "enabled": false
    }
  },

  // Code Spell Checker
  "cSpell.enableFiletypes": ["vimrc"],
  "cSpell.userWords": [
    "asvetliakov",
    "autofetch",
    "axios",
    "bilibili",
    "Callout",
    "clipboardy",
    "Codegeex",
    "codeium",
    "colour",
    "douyin",
    "easymotion",
    "Evondev",
    "feng",
    "fengstats",
    "filesize",
    "flvjs",
    "foldfix",
    "Grammarly",
    "highlightedyank",
    "hlsearch",
    "incsearch",
    "juejin",
    "Kirbyson",
    "lcpr",
    "leetcode",
    "Moegi",
    "mysqld",
    "neovim",
    "nums",
    "nuxt",
    "nvim",
    "peachpuff",
    "powermode",
    "Raycast",
    "rgba",
    "strs",
    "tabao",
    "tencent",
    "timi",
    "unocss",
    "unplugin",
    "utools",
    "vimrc",
    "Vite",
    "Vitesse",
    "vscodevim",
    "webrtc",
    "wechat",
    "weibo",
    "Windi",
    "yuque",
    "zhihu",
    "zimfw",
    "zimrc",
    "zmodule"
  ],

  // ErrorLens
  "errorLens.enabledDiagnosticLevels": ["error", "warning", "info"],
  "errorLens.excludeBySource": ["cSpell", "Grammarly"],

  // Animations
  "animations.Scrolling": "Fade",
  "animations.CursorAnimation": true,
  "animations.Active": "None",
  "animations.Tabs": "None",
  "animations.Command-Palette": "None",
  "animations.Focus-Dimming-Mode": "None",
  "animations.Custom-CSS": false,
  "animations.Smooth-Mode": false,
  "animations.Durations": {
    "Command-Palette": 200,
    "Scrolling": 200
  },
  "vscode_custom_css.imports": [
    "file:///Users/feng/.vscode/extensions/brandonkirbyson.vscode-animations-1.1.0/dist/updateHandler.js"
  ],

  // Translate
  "commentTranslate.hover.string": true,
  "commentTranslate.hover.enabled": true,
  "commentTranslate.hover.variable": true,
  "commentTranslate.multiLineMerge": true,
  "commentTranslate.hover.concise": false,
  "commentTranslate.hover.content": false,
  "commentTranslate.maxTranslationLength": 1000,
  "commentTranslate.targetLanguage": "zh-CN",
  "commentTranslate.source": "Kaiqun.tencent-cloud-translate-tencentCloud",

  // LeetCode
  "leetcode.endpoint": "leetcode-cn",
  "leetcode.defaultLanguage": "typescript",
  "leetcode.workspaceFolder": "/Users/feng/codebase/personal-pro/leetcode",
  "leetcode.hint.commandShortcut": false,
  "leetcode.hint.commentDescription": false,
  "leetcode.hint.configWebviewMarkdown": false
}
