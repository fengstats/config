{
  // Sundial
  // 通过 sundial 配置日出日落时间（自定义主题生效时间，不受到系统设定约束）
  "sundial.sunset": "18:30",
  // 多长时间进行检查是否更换主题（分钟）
  "sundial.interval": 30,
  // 白天/夜晚需要替换的其他配置
  "sundial.daySettings": {
    "workbench.iconTheme": "file-icons"
  },
  "sundial.nightSettings": {},

  // EasyLess
  "less.compile": {
    "outExt": ".css"
  },

  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    // 允许 ESlint 在保存时自动修复
    "source.fixAll.eslint": true
  },

  // 是否允许打开子文件所属父文件的 git 仓库
  "git.openRepositoryInParentFolders": "never",

  // leap 快速跳转，就是弹框模式有点突兀，功能实现倒是没什么问题

  // 覆盖 Vim 提供的原始命令，使用 VSCode 提供的折叠/展开

  // BUG: 崔大的 leap 插件，具体问题看 2023-05-21 日记
  "vim.leap.enable": true,
  "vim.leap.bidirectionalSearch": true,
  "vim.leap.showMarkerPosition": "target",
  // Vimium-C 字符序列：sadjklewcmpgh
  "vim.leap.labels": "sklyuiopnm,qwertzxcvbahdgjf;",
  "vim.leap.marker.charColor": "#ffffff",
  "vim.leap.marker.backgroundColors": ["#d63031", "#3742fa"],
  "vim.leap.caseSensitive": false,

  // 设置 leader 键为空格
  "vim.leader": "<space>",
  "vim.easymotion": false,
  // 使用系统剪切板 cv -> yp
  "vim.useSystemClipboard": true,
  "vim.incsearch": true,
  "vim.useCtrlKeys": false,
  "vim.hlsearch": true,
  "vim.surround": true,
  "vim.sneak": true,
  // 设置 vim 不接管某些快捷键
  "vim.handleKeys": {
    "<C-a>": false,
    "<C-f>": false,
    // 不开启默认功能是不生效的
    "<C-i>": true,
    "<C-o>": true,
    "<C-y>": true
  },
  // 插入/写入模式 | 按键功能映射
  "vim.insertModeKeyBindings": [],
  // 按下 operation (d/y/c) 后等待的模式 | pending
  "vim.operatorPendingModeKeyBindings": [
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["g", "_"]
    }
  ],
  // 可视/选择模式 | 按键功能映射
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      // 删除但是不保存到剪贴板，利用 vim 的黑洞寄存器
      "before": ["backspace"],
      "after": ["\"", "_", "d"]
    },
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    {
      "before": ["enter"],
      "after": ["a", "f"]
    },
    // 其实就是用了个小技巧让我们在可视模式下粘贴时寄存器内数据保持一致：
    // 一般来说如果在可视模式选中后 p 操作会将 p 所覆盖的东西复制到寄存器中, 导致后续再 p 就不是我们想粘贴的内容了
    // 这里在 p 后执行 gv（选中粘贴的数据）并 y（复制）
    {
      "before": ["p"],
      "after": ["p", "g", "v", "y"]
    },
    {
      "before": ["K"],
      "after": ["5", "k"]
    },
    {
      "before": ["J"],
      "after": ["5", "j"]
    },
    // 行首/行尾移动
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["g", "_"]
    }
  ],
  // 普通模式 | 按键功能映射
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<C-o>"],
      "commands": ["workbench.action.navigateBack"]
    },
    {
      "before": ["<C-i>"],
      "commands": ["workbench.action.navigateForward"]
    },
    {
      "before": ["leader", "e"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    // 创建文件
    {
      "before": ["leader", "a"],
      "commands": ["explorer.newFile"]
    },
    // 创建文件夹
    {
      "before": ["leader", "A"],
      "commands": ["explorer.newFolder"]
    },

    // 标签区 | Tab
    // 标签左右切换: 注意若遇到软件设置/插件说明文档时无效, 建议使用系统快捷键 cmd + shift + []（全局可用）
    {
      "before": ["H"],
      "commands": ["workbench.action.previousEditor"]
    },
    {
      "before": ["L"],
      "commands": ["workbench.action.nextEditor"]
    },

    // 编辑区 | Editor
    // 类似 wildfire.vim 但是不能选择包含块里面的内容, 有点可惜
    {
      "before": ["enter"],
      "after": ["v", "a", "f"]
    },
    // 通过设置一个自定义占位符, 然后按"两次空格"来快速定位更改 | placeholder | 进入 insert 模式
    // FIXME: 就算找不到这个占位符的时候也会执行 c4l 就把当前光标所在的4个字符删除了
    {
      "before": ["leader", "leader"],
      "after": ["/", "<", "+", "+", ">", "<cr>", ":", "n", "o", "h", "l", "<cr>", "\"", "_", "c", "4", "l"]
    },
    // 给顶部预留一点空间，但发现遇到折叠代码块后，<c-y> 滚动可视区域会导致光标位置异常跳跃
    // DONE: 发现我的需求可以直接设置 cursorSurroundingLines 来解决
    {
      "before": ["z", "t"],
      "after": ["z", "t", "4", "<c-y>"]
    },
    {
      "before": ["Q"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    // 进入定义文件位置中
    {
      "before": ["leader", "f"],
      "after": ["g", "f"]
    },
    // 将没有定义的变量或者函数快速创建出来
    {
      "before": ["leader", "v", "v"],
      "commands": ["hocusPocus.createVariable"]
    },
    {
      "before": ["leader", "f", "f"],
      "commands": ["hocusPocus.createFunction"]
    },
    // 打开 git diff 差异对比查看
    {
      "before": ["leader", "d", "f"],
      "commands": ["git.openChange"]
    },
    // 向上/下寻找当前文件出现的提示提示/警告/错误
    {
      "before": ["leader", "k"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["leader", "j"],
      "commands": ["editor.action.marker.next"]
    },
    // 解决自动换行后进行光标移动一次跳过多行的问题
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    },
    // 控制光标向上/下滚动指定行 | 保留指定可视区域行数显示
    {
      "before": ["K"],
      "after": ["5", "g", "k"]
    },
    {
      "before": ["J"],
      "after": ["5", "g", "j"]
    },
    // n/N vim 查找后上下匹配项切换 | 并调整显示行为屏幕中心
    {
      "before": ["n"],
      "after": ["n", "z", "z"]
    },
    {
      "before": ["N"],
      "after": ["N", "z", "z"]
    },
    // u 的 redo 操作
    {
      "before": ["U"],
      "after": ["<c-r>"]
    },
    // 右/下分屏
    {
      "before": ["s", "l", ";"],
      "commands": [":vsplit"]
    },
    {
      "before": ["s", "j", ";"],
      "commands": [":split"]
    },
    // 返回上一次操作的位置
    {
      "before": ["g", "k"],
      // "commands": ["workbench.action.navigateBack"]
      "after": ["<c-o>"]
    },
    // gk 的 redo
    {
      "before": ["g", "j"],
      // "commands": ["workbench.action.navigateBack"]
      "after": ["<c-i>"]
    },
    // 行首/行尾移动
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["g", "_"]
    },
    // 保存但不格式化
    {
      "before": ["leader", "w"],
      "commands": ["workbench.action.files.saveWithoutFormatting"]
    },
    // 取消查找后的光标高亮
    {
      "before": ["leader", ";"],
      "commands": [":noh"]
    },
    // 保存文件
    {
      "before": ["leader", "s"],
      "commands": ["workbench.action.files.save"]
    },
    // 关闭文件
    {
      "before": ["leader", "q"],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    // 光标跳转到前面的函数开始处 | 如果光标在函数体内, 那就是该函数的开始处
    {
      "before": ["leader", "["],
      "after": ["[", "{"]
    },
    {
      "before": ["leader", "]"],
      "after": ["]", "}"]
    },

    // 终端区 | Terminal
    // 光标由 editor 聚焦至 terminal
    {
      "before": ["leader", "t"],
      "commands": ["workbench.action.terminal.focus"]
    }
  ],
  // vim keep english in normal（中文输入切换到 NORMAL 模式时自动更改为英文输入法）
  // DONE: 通过 Rime 的配置方案解决了
  // 使用 vim 指令时出现的问题 (如：ciw，删除当前光标所在单词并进入 INSERT 模式，正常来说光标应该从"方块"变成一根"细条光束"，但结果是仍然保持方块状态，直到你再次输入按下字符时光标才会切换为"细条光束"）
  // 对于我来说，光标状态的显示是我快速判断当前 vim 模式的根本，如果光标状态与模式不同步, 可能会产生一些错误的命令输入，单单是从体验上来说就很不友好了
  // 是否启用自动切换
  "vim.autoSwitchInputMethod.enable": false,
  "vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.ABC",
  "vim.autoSwitchInputMethod.obtainIMCmd": "/usr/local/bin/im-select",
  "vim.autoSwitchInputMethod.switchIMCmd": "/usr/local/bin/im-select {im}",

  // 关闭文件后是否聚焦到最近打开过的文件
  "workbench.editor.focusRecentEditorAfterClose": false,

  "emmet.showSuggestionsAsSnippets": true,
  "emmet.useInlineCompletions": true,

  // "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'zero'",
  // "editor.fontLigatures": "'ss01', 'ss02', 'ss03', 'ss06', 'ss12', 'ss13",

  "editor.unicodeHighlight.allowedLocales": {
    // 允许中文符号显示而不突出高亮
    "zh-hant": true
  },

  // TODO: 光标动画会导致 Vim 插件在长按 j/k 时光标追不上当前行高亮，映射 gj/gk 可以解决，但是我感觉可能会对性能有所影响，根据使用体验考虑是否打开
  "editor.cursorSmoothCaretAnimation": "on",

  // 是否开启语法校验检查
  // TODO: 这玩意让我在单文件 JS 中失去了变量提示，有点问题，后续看一下
  "js/ts.implicitProjectConfig.checkJs": true,

  // NOTE: 使用 snippets 时阻止快速提示信息（可以帮助你解决 snippets 导致 tab 补全异常的问题）
  "editor.suggest.snippetsPreventQuickSuggestions": true,

  // NOTE: 从当前主题重写编辑器某些关键字样式（目前看到效果是 vue 项目中子组件/组件库组件的颜色会与普通标签区别开来）
  "editor.semanticTokenColorCustomizations": {
    "enabled": true
  },

  // NOTE: 单独开启一个线程运行，提升性能，1/2/3 是不同进程分组
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1,
    "vscodevim.vim": 2,
    // BUG: 将 Volar 单独配置线程后，hover 提示或者输入提示会出现重复的选项，起初以为是插件的问题，没想到是这个！
    "Vue.volar": 3
    // "BrandonKirbyson.vscode-animations": 4,
  },

